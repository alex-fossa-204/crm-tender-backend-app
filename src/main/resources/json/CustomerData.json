{
    "version": "1.0",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метаданные лота",
    "type": "object",
    "required": [
        "rqUid",
        "rqTm"
    ],
    "additionalProperties": false,
    "properties": {
        "rqUid": {
            "description": "ID запроса",
            "type": "string",
            "maxLength": 32,
            "pattern": "^([0-9]|[a-f]|[A-F]){32}$"
        },
        "rqTm": {
            "description": "Дата и время передачи запроса",
            "type": "object",
            "existingJavaType": "java.time.LocalDateTime"
        },
        "customerInner": {
            "type": "object",
            "required": [
                "salesChannelID",
                "salesChannelCode"
            ],
            "additionalProperties": false,
            "properties": {
                "salesChannelID": {
                    "description": "ID канала продаж",
                    "type": "string",
                    "maxLength": 36
                },
                "salesChannelCode": {
                    "description": "Код канала продаж",
                    "type": "string",
                    "maxLength": 20
                }
            }
        }
    }
}

{
    "version": "1.0",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Метаданные менеджера",
    "type": "object",
    "required": [
        "firstName",
        "lastName",
        "position"
    ],
    "additionalProperties": false,
    "properties": {
        "firstName": {
            "description": "Имя по паспорту",
            "type": "string",
            "maxLength": 64
        },
        "lastName": {
            "description": "Фамилия по паспорту",
            "type": "string",
            "maxLength": 64
        },
        "middleName": {
            "description": "Отчество по паспорту",
            "type": "string",
            "maxLength": 64
        },
        "position": {
            "description": "Занимаемая должность",
            "type": "string",
            "maxLength": 64
        }
    }
}
